    else:
      pass
  def wybierzprzeciwnika(self):
    for i in range(len(self.wrogowie)):
      print(f"{i}.gladiator: ", self.wrogowie[i].imie)
    print("____________WYBIERZ PECIWNIKA____________")
    wybor = input(">>>")
    return self.wrogowie[wybor]

