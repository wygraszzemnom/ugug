import random

class Zolnierz:
  def __init__(self, moce, zdrowie=100, sila=10, wytrzymalosc = 50, poziom=1, imie='jacek placek'):
    self.zdrowie = zdrowie
    self.zdrowie = zdrowie
    self.sila = sila
    self.wytrzymalosc = wytrzymalosc
    self.poziom = poziom
    self.imie = imie
    self.moce = moce

  def wybierzatak(self, czywrog):
    if not czywrog:
      for i in range(len(self.moce)):
          print(f"{i}. moc: {self.moce[i]}")
      moc = int(input("wybierz moc: "))
      return self.moce[moc]
    else:
      return random.choice(self.moce)

  def atak(self, wrog, czywrog):
    moc = self.wybierzatak(czywrog)
    obrazenia = random.randint(1,5) * self.sila * moc.obrażenia
    wrog.zdrowie -= obrazenia
    print(f"{self.imie} atakuje {wrog.imie} z mocą {moc.nazwa} za {obrazenia}")
    print(f"{wrog.imie} ma {wrog.zdrowie} HP")

class moc():
  def __init__(self, nazwa, obrażenia, typ, koszt):
    self.obrażenia = obrażenia
    self.typ = typ
    self.koszt = koszt
    self.nazwa = nazwa
    
